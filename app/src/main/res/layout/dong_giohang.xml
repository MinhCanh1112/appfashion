<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="10sp">

    <LinearLayout
        android:weightSum="9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:padding="5dp"
                android:id="@+id/imgSPGiohang"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_weight="6"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:weightSum="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:gravity="center|left"
                android:layout_weight="1"
                android:text="Tên sản phẩm"
                android:id="@+id/txtNameSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Tên sản phẩm"
                android:textColor="@color/main2"
                android:textStyle="bold" />
            <TextView
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:gravity="center|left"
                android:layout_weight="1"
                android:text="Size"
                android:id="@+id/one_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Tên sản phẩm"
                android:textColor="@color/main2" />

            <LinearLayout
                android:gravity="center|left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/one_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Giá sản phẩm"
                    android:textColor="@color/red" />

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/one_xsoluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Giá sản phẩm"
                    android:textColor="@color/red" />
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/one_giaxsoluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Giá sản phẩm"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:weightSum="6"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:id="@+id/tru"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:id="@+id/one_sl"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="Số lượng"
                    android:textColor="@color/main2" />
                <ImageView
                    android:layout_weight="0.5"
                    android:id="@+id/cong"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="+"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_weight="3.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_weight="1"
                    android:clickable="true"
                    android:id="@+id/xoasp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_delete_sweep_24"
                    android:focusable="true" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>